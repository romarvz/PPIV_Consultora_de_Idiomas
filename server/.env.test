# Configuración de Testing - PPIV Consultora de Idiomas
# ⚠️ IMPORTANTE: Esta base de datos es SOLO para testing

# Base de datos de test (DEBE contener "test" en el nombre)
MONGO_TEST_URI=mongodb://127.0.0.1:27017/idiomas_test

# Configuración del entorno
NODE_ENV=test

# JWT Secret para testing (diferente al de producción)
JWT_SECRET=test_jwt_secret_key_for_testing_only_do_not_use_in_production

# Puerto para servidor de test (opcional)
TEST_PORT=3001

# Configuración de Cloudinary para testing (opcional - usa valores de test)
CLOUDINARY_CLOUD_NAME=test_cloud
CLOUDINARY_API_KEY=test_api_key
CLOUDINARY_API_SECRET=test_api_secret

# Firebase para testing (opcional)
FIREBASE_PROJECT_ID=test-project
FIREBASE_PRIVATE_KEY_ID=test-key-id

# Configuración de logging para tests
LOG_LEVEL=error

# Desactivar algunas funciones en testing
DISABLE_RATE_LIMITING=true
DISABLE_EMAIL_SENDING=true